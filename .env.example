# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here

# PostgreSQL Databases
# Vector database for RAG embeddings (with pgvector extension)
VECTOR_DB_URL=postgresql://user:password@host:5432/vectordb

# State database for conversation history (no special extensions needed)
STATE_DB_URL=postgresql://user:password@host:5432/statedb

# Linode Object Storage Configuration
LINODE_OBJECT_STORAGE_ACCESS_KEY=your-access-key
LINODE_OBJECT_STORAGE_SECRET_KEY=your-secret-key
LINODE_OBJECT_STORAGE_ENDPOINT=https://us-east-1.linodeobjects.com
LINODE_OBJECT_STORAGE_BUCKET=langchain-documents

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000

# Optional: Logging Configuration
LOG_LEVEL=INFO
